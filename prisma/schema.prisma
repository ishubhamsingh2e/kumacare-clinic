generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Clinic {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[] // A clinic can have multiple users
}

model Permission {
  id          String  @id @default(cuid())
  name        String  @unique // e.g., "patient:create", "settings:view"
  description String?
  roles       Role[]
}

model Role {
  id          String       @id @default(cuid())
  name        String       @unique // e.g., "CLINIC_MANAGER", "DOCTOR"
  users       User[]
  permissions Permission[]
}

model User {
  id                   String    @id @default(cuid())
  name                 String?
  email                String?   @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?
  accounts             Account[]
  sessions             Session[]

  // Additions for multi-tenancy and RBAC
  clinicId String?
  clinic   Clinic? @relation(fields: [clinicId], references: [id])

  roleId String?
  role   Role?   @relation(fields: [roleId], references: [id])

  @@index([clinicId])
  @@index([roleId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

model Patient {
  id                        String         @id @default(cuid())
  phone                     String
  name                      String
  gender                    Gender
  dob                       DateTime
  is_dob_estimate           Boolean        @default(false)
  city                      String?
  address                   String?
  pin_code                  String?
  marital_status            MaritalStatus?
  when_field                String? // Clarification needed
  blood_group               BloodGroup?
  spouse_blood_group        BloodGroup?
  spouse_name               String?
  referred_by               String?
  email                     String?        @unique
  how_did_you_hear_about_us String?
  care_of                   String? // "C/O"
  occupation                String?
  tag                       String?
  alternative_phone         String?
  aadhar_number             String?        @unique
  image_url                 String?
  documents                 Json? // To store a list of document URLs

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
